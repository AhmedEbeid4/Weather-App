<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/main_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottomBar">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/locationTextView_Home"
                        android:textColor="#0090F0"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#aFaFaF"
                        android:id="@+id/DateTextView_home"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_marginVertical="8dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        >
                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="300dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/iconImageView_home"
                            android:layout_marginVertical="8dp"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="8dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Temp"
                                android:id="@+id/temp"
                                android:textColor="#aFaFaF"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/TempTextView_home"
                                android:textColor="#0090F0"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Statue"
                                android:id="@+id/statue"
                                android:textColor="#aFaFaF"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/statueTextView_home"
                                android:textColor="#0090F0"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Humidity"
                                android:id="@+id/Hum"
                                android:textColor="#aFaFaF"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:id="@+id/HumidityTextView_home"
                                android:textColor="#0090F0"
                                android:textAlignment="center"
                                android:textSize="20sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                           <pl.droidsonroids.gif.GifImageView
                               android:layout_width="200dp"
                               android:layout_height="250dp"
                               android:id="@+id/windMill"
                               android:src="@drawable/wind_animation"
                               android:layout_alignParentLeft="true"/>
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@id/windMill"
                               android:layout_centerVertical="true"
                               android:layout_alignParentRight="true"
                               android:orientation="vertical">
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal"
                                   android:layout_marginVertical="8dp">
                                   <TextView
                                       android:layout_width="0dp"
                                       android:layout_weight="1"
                                       android:layout_height="wrap_content"
                                       android:text="Degree"
                                       android:id="@+id/degeree"
                                       android:textColor="#a0a0a0"
                                       android:textAlignment="center"
                                       android:textSize="20sp"
                                       />

                                   <TextView
                                       android:layout_width="0dp"
                                       android:layout_height="match_parent"
                                       android:layout_weight="1"
                                       android:text=""
                                       android:textAlignment="center"
                                       android:textColor="#0090F0"
                                       android:id="@+id/windDegreeTextView_home"
                                       android:textSize="20sp" />
                               </LinearLayout>
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal"
                                   android:layout_marginVertical="8dp">
                                   <TextView
                                       android:layout_width="0dp"
                                       android:layout_weight="1.3"
                                       android:layout_height="wrap_content"
                                       android:text="Speed"
                                       android:textColor="#a0a0a0"
                                       android:id="@+id/speed"
                                       android:textAlignment="center"
                                       android:textSize="20sp"
                                       />
                                   <TextView
                                       android:layout_width="0dp"
                                       android:layout_weight="0.7"
                                       android:layout_height="wrap_content"
                                       android:text=""
                                       android:textColor="#0090F0"
                                       android:textAlignment="center"
                                       android:textSize="20sp"
                                       android:id="@+id/WindSpeedTextView_home"
                                       />
                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="km/h"
                                       android:textColor="#aFaFaF"
                                       android:textAlignment="center"
                                       android:textSize="13sp"
                                       android:id="@+id/km"
                                       android:paddingRight="5dp"
                                       />
                               </LinearLayout>
                           </LinearLayout>
                   </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/internet_connection_animation_home"
        android:src="@drawable/internet_access"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@id/bottomBar"
        android:layout_marginVertical="10dp"
        android:padding="10dp"
        android:text="Retry"
        android:id="@+id/retryBtn"
        android:visibility="gone"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_color"
        android:id="@+id/bottomBar"
        app:menu="@menu/bottom_navbar"
        app:itemIconTint="#0090F0"
        app:itemTextColor="#0090F0"/>
</RelativeLayout>